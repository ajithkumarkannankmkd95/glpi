<phpunit
    bootstrap="phpunit/bootstrap.php"
    backupStaticAttributes="true"
    colors="true"
>
  <testsuites>
    <testsuite name="Unit">
       <directory suffix=".php">phpunit/functional/</directory>
    </testsuite>
  </testsuites>
  <php>
    <ini name="memory_limit" value="256M" />
  </php>
</phpunit>

