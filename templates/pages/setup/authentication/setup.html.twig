{% import 'components/form/fields_macros.html.twig' as fields %}
{% set session_get_plural = call('Session::getPluralNumber', []) %}

<form name='form' action='{{ action }}' method='post' data-track-changes='true'>
    <div class="container-xl">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="ti ti-adjustments me-1"></i>{{ __('Authentication setup') }}</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    {{ fields.dropdownYesNo(
                        'is_users_auto_add',
                        CFG_GLPI.is_users_auto_add,
                        __('Automatically add users from an external authentication source'),
                    ) }}
                    {{ fields.dropdownYesNo(
                        'use_noright_users_add',
                        CFG_GLPI.use_noright_users_add,
                        __('Add a user without accreditation from a LDAP directory'),
                    ) }}

                    {{ fields.dropdownArrayField(
                        'user_restored_ldap',
                        CFG_GLPI.user_restored_ldap,
                        call('AuthLDAP::getLdapRestoredUserActionOptions', []),
                        __('Action when a user is restored in the LDAP directory'),
                    ) }}
                    {{ fields.dropdownArrayField(
                        'time_offset',
                        CFG_GLPI.time_offset,
                        call("Dropdown::getGMTValues", []),
                        __('GLPI server time zone'),
                    ) }}

                    <div class="hr-text">
                        <i class="ti ti-trash"></i>
                        <span>{{ __('Actions when a user is deleted from the LDAP directory') }}</span>
                    </div>

                    {{ fields.dropdownArrayField(
                        'user_deleted_ldap_user',
                        CFG_GLPI.user_deleted_ldap_user,
                        call('AuthLDAP::getLdapDeletedUserActionOptions_User'),
                        call('User::getTypeName', [1]),
                    ) }}
                    {{ fields.dropdownArrayField(
                        'user_deleted_ldap_groups',
                        CFG_GLPI.user_deleted_ldap_groups,
                        call('AuthLDAP::getLdapDeletedUserActionOptions_Groups'),
                        call('Group::getTypeName', [session_get_plural]),
                    ) }}

                    {{ fields.dropdownArrayField(
                        'user_deleted_ldap_authorizations',
                        CFG_GLPI.user_deleted_ldap_authorizations,
                        call('AuthLDAP::getLdapDeletedUserActionOptions_Authorizations'),
                        _n('Authorization', 'Authorizations', session_get_plural),
                    ) }}
                </div>
            </div>
            <div class="card-footer d-flex">
                <input type='submit' name='update_auth' class='btn btn-primary ms-auto' value='{{ _x('button', 'Save') }}'>
            </div>
        </div>
    </div>
    <input type="hidden" name="_glpi_csrf_token" value="{{ token }}">
</form>


