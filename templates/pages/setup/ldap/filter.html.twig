{% import 'components/form/fields_macros.html.twig' as fields %}

<div class="card">
    <form method="post" action="{{ target }}">
        <div class="card-body d-flex">
            {{ fields.textField('ldap_filter', session(filter_var), users ? __('Search filter for users') : __('Filter to search in groups')) }}
            {% if not users and config_ldap.fields['group_search_type'] == constant('AuthLDAP::GROUP_SEARCH_BOTH') %}
                {{ fields.textField('ldap_filter2', session('ldap_group_filter2'), __('Search filter for users')) }}
            {% endif %}
        </div>
        <div class="flex-row-reverse">
            <button type="submit" name="change_ldap_filter" class="btn btn-primary">{{ _x('button', 'Search') }}</button>
        </div>
    </form>
</div>
