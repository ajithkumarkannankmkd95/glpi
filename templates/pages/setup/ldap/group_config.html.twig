{% extends 'generic_show_form.html.twig' %}
{% import 'components/form/fields_macros.html.twig' as fields %}

{% block form_fields %}
    {% set field_options = {
        label_class: 'col-xxl-4',
        input_class: 'col-xxl-8'
    } %}

    {% set search_type_field %}
        {% do call('AuthLDAP::dropdownGroupSearchType', [{
            value: item.fields['group_search_type'],
        }]) %}
    {% endset %}
    {{ fields.htmlField('', search_type_field, __('Search type'), field_options) }}
    {{ fields.textField('group_field', item.fields['group_field'], __('User attribute containing its groups'), field_options) }}

    {{ fields.textareaField('group_condition', item.fields['group_condition'], __('Filter to search in groups'), {
        full_width: true,
        label_class: 'col-xxl-2',
        input_class: 'col-xxl-10',
    }) }}

    {{ fields.textField('group_member_field', item.fields['group_member_field'], __('Group attribute containing its users'), field_options) }}
    {{ fields.dropdownYesNo('use_dn', item.fields['use_dn'], __('Use DN in the search'), field_options) }}
{% endblock %}
