{% extends "generic_show_form.html.twig" %}
{% import 'components/form/fields_macros.html.twig' as fields %}
{% set params  = params ?? [] %}

{% block form_fields %}
    {% set field_options = {'readonly': 'readonly'}|merge(field_options ?? {}) %}

    {{ fields.htmlField(
        'itemtype',
        item.fields['itemtype']|itemtype_name,
        __('Item type'),
        field_options
    ) }}

    {{ fields.htmlField(
        'name',
        item.fields['name'],
        __('Name')
    ) }}

    {{ fields.htmlField(
        'serial',
        item.fields['serial'],
        __('Serial')
    ) }}

    {{ fields.htmlField(
        'uuid',
        item.fields['uuid'],
        __('UUID')
    ) }}

    {{ fields.htmlField(
       'rules_id',
        params.associated_rule.getLink(),
        'Rule'|itemtype_name
    ) }}

    {{ fields.htmlField(
        'entities_id',
        params.associated_entity.getLink(),
        'Entity'|itemtype_name
    ) }}

    {{ fields.htmlField(
        'ip',
        call('importArrayFromDB', [item.fields['ip']])|join(', '),
        __('IP')
    ) }}

    {{ fields.htmlField(
        'mac',
        call('importArrayFromDB', [item.fields['mac']])|join(', '),
        __('MAC address')
    ) }}
{% endblock %}
