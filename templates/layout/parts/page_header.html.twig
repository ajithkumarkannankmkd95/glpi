<body class="{{ user_pref('dark_mode') ? 'theme-dark' : '' }}">
   {{ include('layout/parts/impersonate_banner.html.twig') }}

   <div class="page">

      {% if user_pref('page_layout') == 'vertical' %}
      <aside class="navbar navbar-vertical navbar-expand-lg navbar-dark sticky-top">
         <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
               <span class="navbar-toggler-icon"></span>
            </button>

            <a href="{{ index() }}" accesskey="1" title="{{ __('Home') }}"
               class="navbar-brand navbar-brand-autodark">
               <img src="{{ path('pics/logos/logo-GLPI-100-white.png') }}">
            </a>

            <button class="btn btn-outline-secondary trigger-fuzzy" title="{{ __("Ctrl+Alt+G") }}">
               <i class="fas fa-arrow-right"></i>
               {{ __("Go to...") }}
            </button>

            <div class="collapse navbar-collapse" id="navbar-menu">
               {{ include('layout/parts/menu.html.twig') }}
            </div>

            <div class="d-lg-none">
               {{ include('layout/parts/user_header.html.twig') }}
            </div>
         </div>
      </aside>
      {% endif %}

      <header class="navbar navbar-light d-print-none sticky-lg-top {{ user_pref('page_layout') == 'vertical' ? 'navbar-expand-md' : 'navbar-expand-xl' }}">
         <div class="container-fluid">
            {% if user_pref('page_layout') == 'vertical' %}
               {{ include('layout/parts/breadcrumbs.html.twig') }}

               <div class="ms-md-auto d-none d-md-block flex-grow-1 flex-md-grow-0">
                  {{ include('layout/parts/global_search_form.html.twig') }}
               </div>
            {% elseif user_pref('page_layout') == 'horizontal' %}
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                  <span class="navbar-toggler-icon"></span>
               </button>

               <a href="{{ index() }}" accesskey="1" title="{{ __('Home') }}"
                  class="navbar-brand navbar-brand-autodark">
                  <img src="{{ path('pics/logos/logo-GLPI-100-black.png') }}">
               </a>

               <div class="collapse navbar-collapse" id="navbar-menu">
                  {{ include('layout/parts/menu.html.twig') }}
                  <button class="btn btn-outline-secondary mx-3 trigger-fuzzy" title="{{ __("Ctrl+Alt+G") }}">
                     <i class="fas fa-arrow-right"></i>
                     {{ __("Go to...") }}
                  </button>
               </div>
            {% endif %}

            <div class="ms-md-4 {{ user_pref('page_layout') == 'vertical' ? 'd-none d-sm-none d-lg-block' : '' }}">
               {{ include('layout/parts/user_header.html.twig') }}
            </div>
         </div>
      </header>

      {% if user_pref('page_layout') == 'horizontal' %}
      <div class="navbar navbar-expand-md navbar-light">
         <div class="container-fluid justify-content-start">
            {{ include('layout/parts/breadcrumbs.html.twig') }}
            <div class="ms-md-auto d-none d-md-block flex-grow-1 flex-md-grow-0">
               {{ include('layout/parts/global_search_form.html.twig') }}
            </div>
         </div>
      </div>
      {% endif %}

      <div class="content">
         <div class="container-fluid">
            <main role="main" id="page" class="legacy">
