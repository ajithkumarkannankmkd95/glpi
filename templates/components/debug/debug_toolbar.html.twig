{% set rand = rand|default(random()) %}

{% macro widget_button(id, title, icon = null) %}
   <li class="debug-toolbar-widget d-inline-block p-1" data-glpi-debug-widget-id="{{ id }}">
      <button type="button" class="btn btn-icon border-0 p-1" title="{{ title }}" data-bs-toggle="tab">
         <span class="debug-text"></span>
         {% if icon != null %}
            <i class="{{ icon }}"></i>
         {% endif %}
      </button>
   </li>
{% endmacro %}

<div id="debug-toolbar" class="position-sticky bottom-0 w-100 card">
   <div class="d-flex flex-row">
      <div class="debug-toolbar-badge">
         <button type="button" class="btn btn-icon border-0 p-1" onclick="GLPI.Debug.showDebugToolbar();">
            <i class="ti ti-bug"></i>
         </button>
      </div>
      <div class="debug-toolbar-content px-1 d-flex w-100 justify-content-between">
         <ul class="debug-toolbar-widgets nav nav-tabs align-items-center" data-bs-toggle="tabs">
            {{ _self.widget_button('server_performance', 'Server performance') }}
            {{ _self.widget_button('sql', 'SQL Requests', 'ti ti-database') }}
            {{ _self.widget_button('globals', 'Globals', 'ti ti-variable') }}
            {{ _self.widget_button('ajax_requests', 'AJAX Requests', 'ti ti-refresh') }}
            {{ _self.widget_button('client_performance', 'Client performance', 'ti ti-brand-javascript') }}
         </ul>
         <div class="debug-toolbar-controls">
            <div class="debug-toolbar-control">
               <button type="button" class="btn btn-icon border-0 p-1" name="toggle_content_area" onclick="GLPI.Debug.toggleExtraContentArea();">
                  <i class="ti ti-square-arrow-down"></i>
               </button>
               <button type="button" class="btn btn-icon border-0 p-1" title="Close" onclick="GLPI.Debug.hideDebugToolbar();">
                  <i class="ti ti-square-x"></i>
               </button>
            </div>
         </div>
      </div>
   </div>
   <div id="debug-toolbar-expanded-content" class="w-100 card d-none">
   </div>
</div>
<script>
    $(document).on('ready', () => {
        window.GLPI.Debug.init({{ debug_info|json_encode|raw }});
    });
</script>
