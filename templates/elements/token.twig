{% extends "elements/input.twig" %}

{% set element = element|merge({'type': 'token'}) %}

{% block element %}
   {% set fallback_input_class = 'noone' %}
   <div class="controls">
      <div class="input-group">
         <div class="form-control">{{ parent() }}</div>
            <span class="input-group-append">
               <a
                  class="btn btn-outline-secondary" href="#"
                  title="{{ __('Copy token in clipboard') }}" data-toggle="tooltip"
               >
                  <span class='fas fa-copy'></span>
                  <span class="sr-only">{{ __('Copy token in clipboard') }}</span>
               </a>
            </span>

      </div>
   </div>
{% endblock %}

{% block post_element %}
{% endblock %}
